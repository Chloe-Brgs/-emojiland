<h1> My emojis</h1>
<%= link_to "New emoji", new_emoji_path, class:"btn btn-primary" %>

<% current_user.emojis.each do |emoji| %>
<div >
  <p>
    <strong>Name:</strong>
    <%= emoji.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= emoji.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= emoji.price  %>
    <%= "â‚¬" %>
  </p>

<%# mettre image ici %>
  <p>
    <% if emoji.picture.attached? %>
    <%= cl_image_tag emoji.picture.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  </p>
</div>
<br>

<%= link_to "Edit", edit_emoji_path(emoji), class:"btn btn-primary"  %>
