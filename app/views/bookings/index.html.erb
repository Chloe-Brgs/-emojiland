<div class="d-flex flex-column justify-content-center">

  <div class="text-center d-flex justify-content-center">
    <h1 class="card-title my-4 col-12">My bookings</h1>
  </div>

  <br>
  <div class="custom-select row justify-content-center" >
    <%= render "/emojis/category" %>
  </div>
  <br>

  <div>
    <div id="emojis" class="d-flex f-wrap justify-content-center">
      <% @bookings.each do |booking| %>
        <div class="card-h m-3 p-0">
          <div class="cnt">
            <div class="card p-0">
              <div id="card-top" class="d-flex justify-content-center">
                <p><% if booking.emoji.picture.attached? %>
                    <%= cl_image_tag booking.emoji.picture.key, height: 220, width: 220, crop: :fill, class:"card-image"%>
                <% end %></p>
              </div>

              <div id="card-bottom" class="my-0">
                <h2><strong><%= booking.emoji.name.capitalize %></strong></h2>
                <p class="mb-1">Book start : <%= booking.date_start_on%></p>
                <p>Book end : <%= booking.date_end_on%></p>
                <div class="d-flex justify-content-center align-items-end p-0">
                  <div id="card-price">
                    <strong><%= booking.price_booking%><%= "â‚¬" %></strong>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div id="card-hover">
            <%= button_to "Delete booking", booking, method: :delete, class:"text-dark text-decoration-none btn btn-link btn-orange" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
