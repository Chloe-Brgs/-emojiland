
<h1>My Bookings</h1>
<p>Tous mes bookings en cours</p>
<br>
<%# <%= "4 CATEGORIES" %>
<%# <label for="Categories">Choose a category:</label> %>
      <select name="emoji[category]" id="category" >
      
        <option value="">Category</option>
        <option value="licorn">licorn</option>
        <option value="panda">panda</option>
        <option value="?">?</option>
        <option value="??">??</option>
      </select>
<br>

<% current_user.bookings.each do |booking| %>
  <p>
    <strong>Name:</strong>
    <%= booking.emoji.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= booking.emoji.description %>
  </p>
  <p>
    <strong>Price:</strong>
    <%= (booking.emoji.price * (booking.date_end_on - booking.date_start_on)).round(2) %>
  </p>

  <% if booking.emoji.picture.attached? %>
    <%= cl_image_tag booking.emoji.picture.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <p>
  <strong>Period:</strong>
    <%= booking.date_start_on%>
    <%= booking.date_end_on%>
  </p>
  <%= button_to "Supprimer mon booking", booking, method: :delete %>
<% end %>
