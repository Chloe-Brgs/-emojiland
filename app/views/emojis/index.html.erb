          <option value="licorn">licorn</option>
          <option value="panda">panda</option>
          <option value="?">?</option>
          <option value="??">??</option>
        </select>
  <br>

  <div>
    <div id="emojis" class="d-flex f-wrap justify-content-center">
      <% @emojis.each do |emoji| %>
        <div class="card-h m-3 p-0">
          <div class="cnt">
            <%= render emoji %>
          </div>
          <div id="card-hover">
            <%= link_to "Book emoji", emoji, class:"textDark text-decoration-none" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


